@model SampleApplication.Models.CreateEmployeeViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>EmployeeModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.UnassignedUsersWithEmployeeRole == null)
            {
                <span class="text-info">You have to assign a new user to Employee Role to add a new Employee.<br/></span>
            }
                <label asp-for="Employee.UserName" class="control-label"></label>
                <select asp-for="Employee.UserName" asp-items="Model.UnassignedUsersWithEmployeeRole" class="form-select" aria-label="Select user from database"></select>
                <span asp-validation-for="Employee.UserName" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="Employee.FirstName" class="control-label"></label>
                <input asp-for="Employee.FirstName" class="form-control" />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
